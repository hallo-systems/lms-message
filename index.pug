mixin dayType(type)
    case type
        when "normal"
            #normalDay(style="display: none;")
                form
                    .item(style="padding-top: 1rem;")
                        .d-flex.align-items-center
                            label.col-3(for="studentName") 生徒名
                            .ml-auto
                                input#studentName(type="text", name="studentName",placeholder="ハロー太郎")
                                input(type="reset",value="リセット")
                        .line.d-flex.mt-3.align-items-baseline
                            .col-3.mt-auto
                                p 目標選択
                            .cha-mis-w.d-flex
                                select#mode.col-6
                                    each val, key in mode
                                        option(value=key)=val
                                .chapter.col-8
                                    select#chapter.w-100.a
                                        each val, key in chapters
                                            option(value=key)=val
                                select#mission.col-10
                                    each val, key in mission
                                        option(value=key)=val
                        .line.gap.d-flex.aalign-items-center.pb-3
                            label.col-3(for="typing") タイピング
                            textarea#typing(name="typing", cols="45", rows="3", placeholder="例：基礎練習内のとっくんに挑戦し、一度目の挑戦ではミスが多くＳクリアすることはできませんでしたが、自ら再度挑戦し、見事Ｓクリアを達成することができました。")
                        .line.gap.d-flex.aalign-items-center.pb-3
                            label.col-3(for="time-attack") タイムアタック
                            textarea#time-attack(name="time-attack", cols="45", rows="3", placeholder="例：お片付けをしようのステージに挑戦しました。\n順調に問題を解いていき、前回と同じランクで悔しそうにしていましたが、より高い得点を出すことができました。")
                        .line.gap.d-flex.aalign-items-center.pb-3
                            label.col-3(for="challenge") ミッション
                            textarea#mission_mode(name="mission_mode", cols="45", rows="3", placeholder="例：作文ロボットに挑戦し、全てのステージをＳクリアすることができました。文字を逆さにするプログラムで苦戦する場面もありましたが、コーチングを下に自身でプログラムを組み、クリアすることが出来ました。素晴らしいです！")
        when "presen"
            #presentationDay(style="display: none;")
                form
                    .item.gap
                        label.col-3(for="pstudentname") 生徒名
                        input#pstudentname(type="text", name="pstudentname",placeholder="ハロー太郎")
                        input(type="reset",value="リセット")
                    .title.d-flex.align-items-center.line
                        label.col-3(for="title") タイトル
                        textarea#title(name="title", cols="45", rows="1", placeholder="プレゼンテーションタイトル")
                    .production_content.line
                        p.gap.d-flex.align-items-center
                            label.col-3(for="production_content") 作品内容
                            textarea#production_content(name="production_content", cols="45", rows="3", placeholder="例：今回はステージを観賞する作品となっており、クエストで手に入れた新しいオブジェクトのちょうちんや、タイル、まな板などを使い、お祭りの屋台を作っていました。")
                    .ingenuity.line
                        p.gap.d-flex.align-items-center
                            label.col-3(for="ingenuity")
                                | 工夫
                                br
                                |こだわり、
                                br
                                | 難しかった点
                            textarea#ingenuity(name="ingenuity", cols="45", rows="3", placeholder="例：こだわった点として、ちょうちんやタイルの色を意識し、同じ色が連続しないようにプログラミングしたところを挙げてくれました。")
                    .state_of_announcement.line
                        p.gap.d-flex.align-items-center
                            label.col-3(for="state_of_announcement") 発表の様子
                            textarea#state_of_announcement(name="state_of_announcement", cols="45", rows="3", placeholder="例：例：発表会にも慣れてきたようで、特に緊張する様子もなく楽しそうに発表していました。授業前に、早く発表がしたいと意欲的な様子も見せてくれました。")
