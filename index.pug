                    +dayType("normal")
                    +dayType("presen")
                    .gap.d-flex.align-items-center
                        .col-3
                            label(for="homeWork") 自学習内容
                        .cha-mis-w.d-flex
                            select#hwMode.col-6
                                each val, key in mode
                                    option(value=key)=val
                            .chapter.col-8
                                select#chapter02.w-100.a
                                    each val, key in chapters
                                        option(value=key)=val
                            select#mission02.col-10
                                each val, key in mission
                                    option(value=key)=val
                    .btn-area.gap.gap-u
                        input.submit.col-12.m-auto(type="button", value="レッスンレポートを作成する", onclick="submitHandler()")
                .f-r.column.col-lg-6.sticky-top
                    .pt-1
                        input#copy.sticky-top.mt-1(type="button", value="コピーする", onclick="onClickCopy()")
                        p#result.gap-u(contentditable="true")
